<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_detailItem_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:gravity="center"
        android:text="浇水"
        android:textColor="@color/darkslategrey"
        android:layout_alignBottom="@+id/iv_detailItem_plant"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2" />
    <ImageView
        android:id="@+id/iv_detailItem_plant"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>
    <View
        android:layout_below="@+id/iv_detailItem_plant"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_margin="10dp"
        android:id="@+id/view2" />
</RelativeLayout>