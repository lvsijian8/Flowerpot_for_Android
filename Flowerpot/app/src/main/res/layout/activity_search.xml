<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lvsijian8.flowerpot.ui.activity.SearchActivity">
    <RelativeLayout
        android:background="@color/green_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_search_back"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/backwhite_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_centerInParent="true"
            android:text="搜寻"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_search">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:src="@drawable/search_icon2" />
            <EditText
                android:id="@+id/ed_search"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:hint="请输入植物的名称"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_search_cancle"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/skyblue"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:text="取消" />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_search"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>
</LinearLayout>
