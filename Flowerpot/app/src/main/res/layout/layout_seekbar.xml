<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <SeekBar
        android:id="@+id/seekbar_SeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:maxHeight="15dp"
        android:max="30"
        android:progress="30"/>
    <TextView
        android:id="@+id/tv_SeekBar_num"
        android:text="20"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar_SeekBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="22dp" />
    <TextView
        android:id="@+id/tv_SeekBar_unit"
        android:text="å¤©"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_SeekBar_num"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="170dp" />
    <TextView
        android:id="@+id/tv_SeekBar_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="0"
        android:layout_below="@+id/seekbar_SeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
    <TextView
        android:id="@+id/tv_SeekBar_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="30"
        android:layout_alignBaseline="@+id/tv_SeekBar_min"
        android:layout_alignBottom="@+id/tv_SeekBar_min"
        android:layout_alignRight="@+id/tv_SeekBar_num"
        android:layout_alignEnd="@+id/tv_SeekBar_num" />
</RelativeLayout>